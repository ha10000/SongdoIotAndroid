<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.linkb.helloworld.SensorAddActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:textColor="#0000ff"
        android:text="선택한 센서정보를 수정하세요"/>
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="1. Title"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="2. Device"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="3. Author"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="4. Description"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="5. API Key"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="6. Save Interval"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="__"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="\u003c수 정\u003e"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="\u003c취 소\u003e"/>
    </LinearLayout>
</LinearLayout>
