<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.linkb.helloworld.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="40sp" />
    <EditText
        android:id="@+id/edittext"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Subactivity"
        android:layout_below="@+id/edittext"
        android:onClick="startSubactivity" />
    <Button
        android:id="@+id/button2"
        android:layout_below="@id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start ListView Activity"

        android:onClick="startListViewActivity" />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:text="start ScrollViewActivity "
        android:onClick="startScrollViewActivity" />
    <Button
        android:id="@+id/button4"
        android:layout_below="@id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NaverOpenAPI"
        android:onClick="startNaverOpenAPIActivity" />
    <Button
        android:id="@+id/button5"
        android:layout_below="@id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DaumOpenAPI"
        android:onClick="startDaumOpenAPIActivity" />
    <Button
        android:id="@+id/button6"
        android:layout_below="@id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GoogleMap"
        android:onClick="startGoogleMapActivity" />
    </RelativeLayout>
