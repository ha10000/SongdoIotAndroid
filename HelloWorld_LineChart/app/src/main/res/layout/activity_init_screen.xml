<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.linkb.helloworld.InitScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textSize="30dp"
            android:textColor="#0000ff"
            android:gravity="center"
            android:text="초기 화면"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="사용자아이디 :"
                android:textSize="20dp"
                android:textColor="#0000ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_id"
                android:text="user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:src="@drawable/coala1"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="25dp"
                android:id="@+id/ButtonLogin"
                android:textColor="#0000ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:layout_weight="25"
                android:onClick="clickLoginButton"/>
            <Button
                android:textSize="25dp"
                android:id="@+id/ButtonNetworkSet"
                android:textColor="#0000ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="네크워크 설정"
                android:layout_weight="25"
                android:onClick="clickNetworkSettingButton"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
